<% if header.present? %>
    <div class="jumbo highlight" style='background-image: url("<%= header.image_url(:original)%>") !important; 
    background-size: cover; background-repeat: no-repeat;height: 50vw;margin-top: -1.6rem;'>
    <div class="row">
        <div class="medium-9 small-centered text-center">
        <!--<span><%# header.label %></span>-->
        <h1 style="color: #fff;" class="textoPortada"><%= header.title %></h1>
        <h3 class="lead textoPortada" style="color: #fff;"><%= header.description %></h3>
        <div class="small-centered medium-6 large-4 ">
            <%= link_to header.link_text, header.link_url, {class: "button botonPortada", style:"background: #72b951 !important;"} %>
        </div>
        </div>
    </div>
    </div>
    <% if header.image.present? %>
        <div style="background-image: url('/assets/banner2.png') !important; 
        background-size: contain; background-repeat: no-repeat;height: 25vw;margin-bottom: 1.5rem;">
        </div>
    <% end %>
<% end %>