<% content_for :body_class, "home-page" %>
<div class="row fila">
    <%= back_link_to houses_path(:option => 'houses') %>

    <div class="text-center">
        <h1 class="tituloPrograma"><span style="border-bottom: 5px solid #72b951;"><%= @house.name %></span></h1>
        <% if @house.disability_access == true %>
                <%= image_tag "disability_access.png", style: 'padding:10px;'%>
        <% end %>
    </div>

    <div>
        <br><br>
        <div class="column columna2">
            <h4 class="descrPrograma">Dirección:</h4>
            <h4 data-magellan><%= @house.address%>, <%= link_to "ver mapa", "#section-map"%></h4>
            <h4 class="descrPrograma">Horario de Atención:</h4>
            <h4><%= @house.schedule%></h4>
            <h4 class="descrPrograma">Teléfono:</h4>
            <h4><%= @house.phone%></h4>
            <h4 class="descrPrograma">Email:</h4>
            <h4><%= @house.email%></h4>
            <%= link_to "Ver Talleres en esta casa", namespaced_house_path(@house.name, :houseid => @house.id,
                                        :workshops => 'ver'), class: "button" %>
        </div>
        <div class="column columna2">
            <!--Aqui las imagenes del carousel-->
            <div class="orbit" role="region" aria-label="Favorite Space Pictures" data-orbit>
                <div class="orbit-wrapper">
                    <div class="orbit-controls">
                    <button class="orbit-previous"><span class="show-for-sr">Previous Slide</span>&#9664;&#xFE0E;</button>
                    <button class="orbit-next"><span class="show-for-sr">Next Slide</span>&#9654;&#xFE0E;</button>
                    </div>
                    <ul class="orbit-container">
                    <li class="is-active orbit-slide">
                        <figure class="orbit-figure">
                            <% if @house.image.present?%>
                                <%= image_tag @house.image_url(:large), class:'orbit-image', alt:'Image' %>
                            <% elsif @house.photo.present? %>
                                <%= image_tag @house.photo, class:'orbit-image', alt:'Image' %>
                            <% else %>
                                <%= image_tag "casasDefault.jpg", class:'orbit-image', alt:'Image' %>
                            <% end %>
                            
                        </figure>
                    </li>
                    <% @house.house_images.each do |image| %>
                        <li class="orbit-slide">
                            <figure class="orbit-figure">
                            <%= image_tag image.image_url(:large), class:'orbit-image', alt:'image' %>
                            </figure>
                        </li>
                    <% end %>
                    </ul>
                </div>
                <nav class="orbit-bullets">
                    <button class="is-active" data-slide="0"><span class="show-for-sr">First slide details.</span><span class="show-for-sr">Current Slide</span></button>
                    <% @house.house_images.each_with_index do |image, index| %>
                        <button data-slide='<%= index + 1%>'><span class="show-for-sr">Second slide details.</span></button>
                    <% end %>
                </nav>
            </div>
            
        </div>
    </div>
    <div id="section-map" class="margin small-12 column">
        <h3>Ubicación</h3>
        <%= render_map(nil, "houses", false, nil, @house_coordinates) %>
    </div>
</div>

<% if @houseNews.any? %>
    <div class="row fila">
        <%= render "news" %>
    </div>
<% end %>